@model List<ContactModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}



<div class="text-center">

    <div class="d-grid gap-2 d-md=flex justify-content-md-start">
        <a role="button" class="btn btn-outline-primary" asp-controller="Contato" asp-action="Create">Adicionar novo Contato</a>
    </div>
    <br />

    @if(TempData["msgSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="close">x</button>
            @TempData["msgSuccess"]
        </div>
    }

    @if (TempData["msgError"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="close">x</button>
            @TempData["msgError"]
        </div>
    }


    <br />



    <h1 class="display-4">Listagem de Contatos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ContactModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Name</td>
                        <td>@contato.Email</td>
                        <td>@contato.Phone</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic outlined example">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="EraseConfirmation">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

